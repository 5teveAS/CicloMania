@model IEnumerable<CicloMania.Models.facturaMantenimientos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear Factura por mantenimiento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.detallesArreglo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliente.cedula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.detallesArreglo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.cedula)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.facturaidM }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.facturaidM }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.facturaidM })
        </td>
    </tr>
}

</table>
