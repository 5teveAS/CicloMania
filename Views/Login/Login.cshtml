@model CicloMania.Models.Usuarios
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Recursos/css/estilos.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="contenedorLogin  login">

    <div class="card custom-card">
        @*<div class="card-header bg-success text-white">
                <h3>Login Ciclo Mania CR</h3>
            </div>*@
        <div class="card-header bg-success text-white link-Logo logo"  id="logo-texto-sesion">
          
            <div>Ciclo Mania CR - Iniciar Sesión</div>
        </div>
        <div class="card-body">
            <div class="form-group login-form">
                <asp:Label runat="server" Text="Nombre de usuario">Nombre de usuario</asp:Label>
                @Html.TextBoxFor(m => m.Nombre_de_usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre_de_usuario)
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.C_Contraseña_)
                @Html.PasswordFor(m => m.C_Contraseña_, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.C_Contraseña_)
            </div>
            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-success rounded-0">Iniciar Sesion</button>
                @Html.ActionLink("Registrar nuevo", "Register")
            </div>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        </div>
    </div>
</div>
}

