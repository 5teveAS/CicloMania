@model CicloMania.Models.Usuarios
@{
    ViewBag.Title = "Register";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card custom-card">
        <div class="card-header bg-success text-white">
            <h3>Registro de Usuario</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Nombre_de_usuario)
                @Html.TextBoxFor(m => m.Nombre_de_usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre_de_usuario)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.C_Contraseña_)
                @Html.PasswordFor(m => m.C_Contraseña_, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.C_Contraseña_)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success rounded-0">Registrase</button>
                @Html.ActionLink("Volver al Login", "Login")
            </div>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        </div>
    </div>
}

