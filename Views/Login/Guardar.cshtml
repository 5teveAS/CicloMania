@model CicloMania.Models.Usuarios

@{
    ViewBag.Title = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Nuevo", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="contenedorLogin  login">

        <div class="card custom-card">
            <div class="card-header bg-success text-white link-Logo logo" id="logo-texto-sesion">

                <div>Ciclo Mania CR - Registrar Usuario</div>
            </div>
            <div class="card-body">
                <div class="login-form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre_de_usuario)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre_de_usuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre_de_usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.C_Contraseña_, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.C_Contraseña_, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.C_Contraseña_, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Registrar Usuario" class="btn btn-success" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <font color="green">@ViewBag.Mensaje</font>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
