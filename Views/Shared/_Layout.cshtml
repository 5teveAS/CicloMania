<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CicloMania</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Bebas+Neue&family=Lobster&family=Pacifico&display=swap" rel="stylesheet">

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Recursos/css/estilos.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>



</head>
<body>

    <header class="header">
        <div class="contenedor contenido-header">
            <div class="barra">
                <a class="link-Logo" href="/" style="color: black !important;">
                    <div class="logo">
                        <img src="~/img/logo.png" alt="Logotipo de Ciclo Mania" height="50" width="50">
                        <div id="logo-texto">Ciclo Mania CR</div>
                    </div>

                </a>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white !important">
                        MENU
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("Inicio", "index", "Home")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Articulo", "index", "articulo")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Cliente", "index", "cliente")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Empleado", "index", "empleado")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Envios", "index", "envios")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Factura", "index", "factura")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Fac.Mantenimiento", "index", "facturaMantenimiento")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Inventario", "index", "inventario")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Mantenimiento", "index", "mantenimientos")</h6>
                        <h6 class="dropdown-item" href="#">@Html.ActionLink("CRUD-Proveedor", "index", "proveedor")</h6>
                    </div>
                </div>




            </div> <!--.barra-->
        </div>

    </header>

    <div class="contenedor">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ciclo Mania CR. Todos los Derechos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
